{
  "compilerOptions": {
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "lib",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src/**/*"]
}
